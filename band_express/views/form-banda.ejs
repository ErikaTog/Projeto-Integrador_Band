<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - Banda</title>
    <link rel="shortcut icon" href="/img/icone.png" type="image/x-icon">
    <!-- estilo -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/geral.css">
    <link rel="stylesheet" href="/stylesheets/form-banda.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" integrity="sha384-v8BU367qNbs/aIZIxuivaU55N5GPF89WBerHoGA4QTcbUjYiLQtKdrfXnqAcXyTv" crossorigin="anonymous">
</head>

<body>

    <div class="form-banda">
        <header>
            <div class="nav-container">
                <nav class="navbar">
                    <a class="navbar-brand" href=""><img src="/img/logo_5000x1500.png" alt="Band+"></a>
                    <form action="/cadastro/banda" method="POST">
                        <a href="feed.html">
                            <button type="submit" class="btn btn-salvar">Cadastrar</button>
                        </a>
                    </form>
                </nav>
            </div>
        </header>
    
        <div class="cadastro-container container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <!-- Grupo Form Identificação -->
                    <section id="identificacao" class="card-cadastro">
                        <div class="form-header">
                            <h4>Identificação</h4>
                        </div>
                        <h5>Dados do usuário</h5>
                        <div class="campo-form card-cadastro">
                            <form action="/cadastro/banda" method="POST" id="form-1">
                                <div class="form-group row">
                                    <label for="inputUser" class="col-xl-2 col-lg-3 col-form-label">Usuário</label>
                                    <div class="col-xl-6 col-lg-9">
                                        <input type="text" class="form-control" id="inputUser" name="nome"
                                            placeholder="Digite o usuário" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-xl-2 col-lg-3 col-form-label">Senha</label>
                                    <div class="col-xl-6 col-lg-9">
                                        <input type="password" class="form-control" id="inputPassword" name="senha"
                                            placeholder="6 dígitos" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail" class="col-xl-2 col-lg-3 col-form-label">E-mail</label>
                                    <div class="col-xl-8 col-lg-9">
                                        <input type="email" class="form-control" id="inputEmail" name="email"
                                            placeholder="Digite um e-mail" required>
                                    </div>
                                </div>
                                <!-- <button type="submit" class="btn btn-salvar">Cadastrar</button> -->
                            </form>
                        </div>
                    </section>
    
                    <!-- Grupo Form Informação -->
                    <section id="informacao" class="card-cadastro">
                        <div class="form-header">
                            <h4>Informações da banda</h4>
                        </div>
                        <h5 class="conte">Conte mais</h5>
                        <form action="/cadastro/banda" method="POST" id="form-2">
                            <div class="form-group row">
                                <label for="inputUser" class="col-sm-12 col-form-label"> 
                                    <h5>Gênero</h5>
                                </label>
                                <div class="col-xl-8">
                                    <input type="text" class="form-control" id="inputUser" name="genero"
                                        placeholder="Digite o gênero musical">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputBio" class="remove">
                                    <h5>Sobre a banda</h5>
                                </label>
                                <textarea class="form-control" id="inputBio" rows="11" name="sobre"
                                    placeholder="Conte sobre a banda!"></textarea>
                            </div>
                        </form>
                    </section>
                </div>
    
                <div class="col-md-6 col-sm-12">
    
                    <!-- Grupo Form Dados -->
                    <section id="dados" class="card-cadastro ml-auto">
                        <div class="form-header">
                            <h4>Dados da banda</h4>
                        </div>
                        <h5>Localização</h5>
                        <div class="campo-form card-cadastro">
                            <form action="/cadastro/banda" method="POST" id="form-3">
                                <div class="form-group row">
                                    <label for="inputEstado" class="col-xl-2 col-lg-3 col-form-label">Estado</label>
                                    <div class="col-xl-6 col-lg-9">
                                        <input type="text" class="form-control" id="inputEstado" name="estado"
                                            placeholder="Digite seu Estado">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputCidade" class="col-xl-2 col-lg-3 col-form-label">Cidade</label>
                                    <div class="col-xl-6 col-lg-9">
                                        <input type="text" class="form-control" id="inputCidade" name="cidade"
                                            placeholder="Digite a cidade">
                                    </div>
                                </div>
                            </form>                            
                        </div>
    
    
                        <h5>Contatos</h5>
                        <div class="campo-form card-cadastro">
                            <form action="/cadastro/banda" method="POST">
                                <div class="form-group row">
                                    <label for="inputSite" class="col-xl-2 col-lg-3 col-form-label">Site</label>
                                    <div class="col-xl-8 col-lg-9">
                                        <input type="text" class="form-control" id="inputSite" name="site"
                                            placeholder="Digite o site da banda">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputCanal" class="col-xl-2 col-lg-3 col-form-label">Canal</label>
                                    <div class="col-xl-8 col-lg-9">
                                        <input type="text" class="form-control" id="inputCanal" name="canal"
                                            placeholder="Digite o canal da banda">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputEmail" class="col-xl-2 col-lg-3 col-form-label">E-mail</label>
                                    <div class="col-xl-8 col-lg-9">
                                        <input type="text" class="form-control" id="inputEmail" name="emailBanda"
                                            placeholder="Digite o e-mail da banda">
                                    </div>
                                </div>
                            </form>
                        </div>
    
                        <h5>Integrantes</h5>
                        <div class="campo-form card-cadastro">
                            <form action="/cadastro/banda" method="POST">
                                <div class="form-group row">
                                    <label for="inputMembro" class="col-xl-2 col-lg-3 col-form-label">Usuário</label>
                                    <div class="col-xl-8 col-lg-8">
                                        <input type="text" class="form-control" id="inputMembro" name="integrante"
                                            placeholder="Digite o usuário">
                                    </div>
                                </div>
                                <div class="form-group row mb-0">
                                    <label for="inputFuncao" class="col-xl-2 col-lg-3 col-form-label">Função</label>
                                    <div class="col-xl-8 col-lg-8">
                                        <input type="text" class="form-control" id="inputFuncao" name="funcao"
                                            placeholder="Digite a função">
                                    </div>
                                </div>
                                <div class="add-membro">
                                    <a href=""><i class="fas fa-plus-square"></i></a>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    
<%- include('./partials/footer.ejs') %>